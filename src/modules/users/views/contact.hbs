<style>
  .card {
    float: center;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    max-width: 60%;
    margin: 0 auto;
  }

  .footer {
    background-color: #ff9d71;
    width: 100%;
  }

  .description {
    background-color: #f5f2f2;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    width: 80%;
    margin: auto;
    padding: 15px;
  }

  .description_text {
    text-align: center;
    font-size: medium;
    color: black;
  }

  .title {
    text-align: center;
    font-family: Georgia, "Times New Roman", Times, serif;
    color: #ff9d71;
    font-size: larger;
  }

  .subtitle {
    text-align: center;
    font-size: larger;
    color: black;
  }

  .footer_message {
    color: rgba(240, 255, 240, 0.74);
    text-align: center;
  }

  .copyright {
    font-size: small;
  }

  .container {
    padding: 2px 16px;
  }
